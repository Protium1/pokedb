<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-9">
    <%= image_tag(@poke.picture_url, width: '40%') if @poke.picture.present? %>
  </div>

  <div class="col-md-3">
    <p><b>Number: </b><%= @poke.number %></p>
    <p><b>Name: </b><%= @poke.name %></p>
    <p><b>Generation: </b><%= @poke.generation %></p>
    <p><b>Acquired: </b><%= @poke.acquired %></p>
    <p>
      <%= link_to 'Edit', edit_poke_path(@poke) %> |
      <%= link_to 'Destroy', @poke, data: { confirm: 'Are you sure?' }, method: :delete %> |
      <%= link_to 'Back', pokes_path %>
    </p>
  </div>
</div>